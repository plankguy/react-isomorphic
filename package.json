{
  "name": "universal-blog",
  "version": "0.0.1",
  "description": "An isomorphic React blog",
  "main": "server.js",
  "scripts": {
    "slate": "rm -rf node_modules && npm install",
    "clean": "rm -rf dist",
    "start": "npm run production",
    "dev": "NODE_ENV=development node app.js --progress --colors --profile",
    "production": "NODE_ENV=production node app.js --progress --colors --profile",
    "build": "npm run clean && NODE_ENV=production webpack -p --progress --colors --profile",
    "##dev": "cp views/index.html public/index.html && NODE_ENV=development webpack && webpack-dev-server --history-api-fallback",
    "##dev-info": "echo \"Copies view to public folder. Sets the content base for our webpack-dev-server to public/ and enables hot reloading\"",
    "##production": "rm -rf public/index.html && NODE_ENV=production webpack -p && NODE_ENV=production node app.js",
    "#production": "rm -rf public/index.html && NODE_ENV=production webpack -p && NODE_ENV=production node app.js",
    "#webpack-dev-server": "NODE_ENV=development PORT=8080 webpack-dev-server --content-base public/ --hot --inline --devtool inline-source-map --history-api-fallback",
    "#dev": "cp views/index.html public/index.html && NODE_ENV=development webpack && npm run webpack-dev-server",
    "#start": "npm run production",
    "test": "echo \"No tests defined yet\""
  },
  "keywords": [
    "react",
    "isomorphic",
    "express",
    "babel",
    "node"
  ],
  "author": "Jeff Waterfall <jeff@fallwater.ca>",
  "license": "LGPL-3.0",
  "dependencies": {
    "babel": "^6.3.26",
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.1",
    "express": "^4.13.3",
    "history": "^1.14.0",
    "hogan-express": "^0.5.2",
    "lodash": "^3.10.1",
    "marked": "^0.3.5",
    "react": "^0.14.1",
    "react-dom": "^0.14.1",
    "react-router": "^1.0.1",
    "webpack": "^1.12.12"
  },
  "devDependencies": {
    "autoprefixer": "^6.2.3",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-transform-class-properties": "^6.4.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.3.13",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "merge": "^1.2.0",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.8.0",
    "react-hot-loader": "^1.3.0",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "webpack-dev-server": "^1.12.1"
  }
}
